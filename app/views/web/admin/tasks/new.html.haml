= simple_form_for @task, url: admin_tasks_path do |f|
    = f.input :title
    = f.association :user, collection:  decorate_user, label_method: :full_name, include_blank: true
    = f.association :city, include_blank: true
    = f.association :district, include_blank: true
    = f.association :service, include_blank: true
    = f.input :description
    = f.input :address
    = f.button :submit, class: 'btn btn-info'
