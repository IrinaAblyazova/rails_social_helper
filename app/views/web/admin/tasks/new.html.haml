= simple_form_for @task, html: { multiple: true }, url: admin_tasks_path do |f|
    = f.input :title
    = f.association :user, label_method: :first_name, include_blank: false
    = f.association :city
    = f.association :district
    = f.association :service
    = f.input :description
    = f.input :address
    = f.input :image, as: :file, multiple: true
    = f.button :submit, class: 'btn btn-info'
