= search_form_for [:admin, @q], builder: SimpleForm::FormBuilder, wrapper: :horizontal_form, html: { class: 'form-horizontal'} do |f|
    .row
        .col-md-6
            = f.input :name_cont, label: 'Название'
            = f.input :city_id_eq, collection: City.all.map{ |t| [t.name, t.id]}, label: 'Город'
            = f.input :district_id_eq, collection: District.all.map{ |t| [t.name, t.id]}, label: 'Район'
            = f.input :address_cont, label: 'Адрес'
        .col-md-6
            = f.input :email_notification_cont, label: 'E-mail'
            = f.input :phone, label: 'Телефон'
            = f.input :state_eq, collection: [['Активный', 'active'], ['Удаленный', 'deleted']], label: 'Состояние'
        = f.button :submit, 'Искать', class: 'btn btn-outline-secondary m-2'