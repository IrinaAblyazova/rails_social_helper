= simple_form_for @task, url: user_tasks_path do |f|
    = f.input :title
    = f.association :city, default: current_user.city_id
    = f.association :district, include_blank: true
    = f.association :services, as: :check_boxes
    = f.input :description
    = f.input :address
    = f.button :submit, class: 'btn btn-info'
