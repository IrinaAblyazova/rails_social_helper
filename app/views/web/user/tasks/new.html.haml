= simple_form_for @task, html: { multipart: true } , url: user_tasks_path do |f|
    = f.input :title
    = f.association :city, default: current_user.city_id
    = f.association :district, include_blank: true
    = f.association :service, include_blank: true
    = f.input :description
    = f.input :address
    = f.input :images, as: :file, input_html: { multiple: true }
    = f.input :videos, as: :file, input_html: { multiple: true }, direct_upload: true
    = f.button :submit, class: 'btn btn-info'
